<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutrition.Views.LowCalories"
             Title="Low Calories Meals">


    <VerticalStackLayout Padding="10"  VerticalOptions="CenterAndExpand">

        <Grid BackgroundColor="#EDB27E"
            HeightRequest="80"
            WidthRequest="300"
            VerticalOptions="CenterAndExpand">
            <Label Text="Grilled Lime Chicken"
                FontSize="26"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
         </Grid>
        
        
      
      <HorizontalStackLayout  Padding="10" Spacing="20" HorizontalOptions="CenterAndExpand">


        <Image  Source="lowcalories.png"
                WidthRequest="250"
                HeightRequest="250"
                Aspect="AspectFit"/>

        <VerticalStackLayout  Padding="40" Spacing="10" VerticalOptions="CenterAndExpand">

                 <Label FontSize="22" 
                        FontAttributes="Bold"  
                        HorizontalOptions="Center">
                     <Label.FormattedText>
                         <FormattedString>
                             <Span Text="Ingredients " TextDecorations="Underline"/>
                         </FormattedString>
                     </Label.FormattedText>
                 </Label>

                <VerticalStackLayout  Spacing="6" Padding="20">
                        <!--Recipe ingredients-->
                         <Label  Text=" • 8 boneless skinless chicken breast     halves (4 ounces each) " FontSize="16" LineBreakMode="WordWrap" WidthRequest="300"  HeightRequest="50"/>
                         <Label  Text=" • 1/2 cup lime juice " FontSize="16"/>
                         <Label  Text=" • 1/3 cup olive oil " FontSize="16"/>
                         <Label  Text=" • 4 green onions, chopped " FontSize="16"/>
                         <Label  Text=" • 4 garlic cloves, minced " FontSize="16"/>
                         <Label  Text=" • 3 tablespoons chopped fresh dill, divided " FontSize="16"/>
                         <Label  Text=" • 1/4 teaspoon pepper " FontSize="16"/>
                       
                </VerticalStackLayout>
        </VerticalStackLayout>
     </HorizontalStackLayout>

     <Button  Text="Steps"
                Clicked="LowCaloriesSteps_Clicked"
                FontSize="28" 
                FontAttributes="Bold"  
                BackgroundColor="#D9D9D9"
                WidthRequest="220"
                TextColor="Black"
                HorizontalOptions="Center"/>
 </VerticalStackLayout>
</ContentPage>