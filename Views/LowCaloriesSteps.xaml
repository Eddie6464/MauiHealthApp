<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutrition.Views.LowCaloriesSteps"
             Title="Low Calories Steps">

<VerticalStackLayout Padding="10" VerticalOptions="FillAndExpand">

        <Grid BackgroundColor="#EDB27E"
            HeightRequest="80"
            WidthRequest="300"
            VerticalOptions="CenterAndExpand">
            <Label Text="Steps"
                FontSize="30"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Grid>
        
        
        
        
       
      
      <HorizontalStackLayout  Padding="10" HorizontalOptions="FillAndExpand" >

        <VerticalStackLayout  Spacing="20" Padding="10" VerticalOptions="FillAndExpand">


            <Grid BackgroundColor="#EDB27E"
                HeightRequest="80"
                WidthRequest="250"
                VerticalOptions="CenterAndExpand">
                <Label Text="Step 1"
                    FontSize="26"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Grid>
        
            <!--Steps to make low calorie meals-->
            <Label Text= "Place chicken in a shallow dish. Combine the lime juice, oil, onions, garlic, 2 tablespoons dill and pepper. Pour over chicken and turn to coat. Refrigerate and  covered for 2-4 hours. " LineBreakMode="WordWrap" WidthRequest="330"  HeightRequest="400" FontSize="20"/>

        </VerticalStackLayout>

        <VerticalStackLayout Spacing="20" Padding="10" VerticalOptions="FillAndExpand">

            <Grid BackgroundColor="#EDB27E"
                        HeightRequest="80"
                        WidthRequest="250"
                        VerticalOptions="CenterAndExpand">
                        <Label Text="Step 2"
                            FontSize="26"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>
            </Grid>
        

                <Label Text="Drain chicken, discarding marinade. Grill chicken, covered, over medium-hot heat for 3-4 minutes on each side, or until a thermometer reads 165°. Sprinkle with remaining 1 tablespoon dill." LineBreakMode="WordWrap" WidthRequest="330"  HeightRequest="400" FontSize="20"/>
        </VerticalStackLayout>
     </HorizontalStackLayout>
 </VerticalStackLayout>
</ContentPage>