<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.Step2Page">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="#B2E8F2">

            <Label
                Text="Step 2"
                HorizontalOptions="Fill"
                TextColor="#266974"
                BackgroundColor="#7EDCED"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Please type in the second step in your plan"
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#266974"
                BackgroundColor="#7EDCED"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Entry
                x:Name="Entry"
                Placeholder="Enter text"
                TextColor="#000000"
                BackgroundColor="#D9D9D9"
                VerticalOptions="Fill"
                 />
            
            <Button
                x:Name="Step3Btn"
                Padding="40"
                Text="Step 3" 
                TextColor="#714A28"
                BackgroundColor="#EDB27E"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnStep3Click"
                 />

            <Button
                x:Name="BackBtn"
                Padding="30"
                Clicked="OnBackClick"
                HorizontalOptions="Start"
                TextColor="#7A502A"
                BackgroundColor="#EDB27E"
                Text="Back" 
                FontSize="Medium"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
