<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MentalHealthApp.MainPage"
             Title="Mental Health App"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#E6F0FA">

    <Grid RowDefinitions="Auto, *">
        
        <BoxView Grid.Row="0" 
                 BackgroundColor="#6B5B95" 
                 HeightRequest="88"/>

        <Label Grid.Row="0" 
               Text="General Wellbeing - Mental Health" 
               FontSize="27" 
               TextColor="White" 
               HorizontalOptions="Center" 
               VerticalOptions="Center"/>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="30" Padding="20" VerticalOptions="Center">

               
                <Label Text="Welcome to Your Mental Health App!" 
                       FontSize="22" 
                       HorizontalOptions="Center" 
                       TextColor="Black"/>

               
                <HorizontalStackLayout Spacing="22" HorizontalOptions="Center">

                    <Border BackgroundColor="#FF6F61" 
                            StrokeShape="RoundRectangle 10" 
                            Padding="22" 
                            WidthRequest="165" 
                            HeightRequest="165">
                        <VerticalStackLayout Spacing="11" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="Chat with Bot" 
                                   FontSize="20" 
                                   TextColor="White" 
                                   HorizontalOptions="Center"/>
                            <Button Text="Start Chat" 
                                    BackgroundColor="White" 
                                    TextColor="#FF6F61" 
                                    FontSize="18" 
                                    CornerRadius="12" 
                                    HeightRequest="44" 
                                    Clicked="OnChatBotClicked"/>
                        </VerticalStackLayout>
                    </Border>

                    <Border BackgroundColor="#88B04B" 
                            StrokeShape="RoundRectangle 10" 
                            Padding="22" 
                            WidthRequest="165" 
                            HeightRequest="165">
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="Activities" 
                                   FontSize="20" 
                                   TextColor="White" 
                                   HorizontalOptions="Center"/>
                            <Button Text="Explore" 
                                    BackgroundColor="White" 
                                    TextColor="#88B04B" 
                                    FontSize="18" 
                                    CornerRadius="12" 
                                    HeightRequest="44" 
                                    Clicked="OnActivitiesClicked"/>
                        </VerticalStackLayout>
                    </Border>

                    <Border BackgroundColor="#6B5B95" 
                            StrokeShape="RoundRectangle 10" 
                            Padding="22" 
                            WidthRequest="165" 
                            HeightRequest="165">
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="Track Emotions" 
                                   FontSize="20" 
                                   TextColor="White" 
                                   HorizontalOptions="Center"/>
                            <Button Text="Start" 
                                    BackgroundColor="White" 
                                    TextColor="#6B5B95" 
                                    FontSize="18" 
                                    CornerRadius="12" 
                                    HeightRequest="44" 
                                    Clicked="OnEmotionalTrackingClicked"/>
                        </VerticalStackLayout>
                    </Border>

                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
