<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutrition.Views.HighCalories"
             Title="High Calories">
     <VerticalStackLayout Padding="10" VerticalOptions="FillAndExpand">

        <Grid BackgroundColor="#EDB27E"
                HeightRequest="80"
                WidthRequest="300"
                VerticalOptions="CenterAndExpand">
                <Label Text="Strawberry Shortcake"
                    FontSize="26"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
         </Grid>
        
        
        
      
      <HorizontalStackLayout  Padding="20" HorizontalOptions="FillAndExpand">

        <!--Image of the recipe-->
        <Image  Source="highcalories.png"
                WidthRequest="300"
                HeightRequest="300"
                Aspect="AspectFit"/>

        <VerticalStackLayout  Padding="30" VerticalOptions="FillAndExpand">

                 <Label FontSize="22" 
                        FontAttributes="Bold"  
                        HorizontalOptions="Center">
                     <Label.FormattedText>
                         <FormattedString>
                             <Span Text="Ingredients " TextDecorations="Underline"/>
                         </FormattedString>
                     </Label.FormattedText>
                 </Label>

                <VerticalStackLayout  Spacing="6" Padding="10">
                    
                         <Label  Text=" • 1 cup low-fat Greek yogurt" FontSize="16"/>
                         <Label  Text=" • ¼ cup low-fat milk" FontSize="16"/>
                         <Label  Text=" • 3 cups whole wheat pastry flour (see Chef Tips)" FontSize="16"/>
                         <Label  Text=" • ½ cup sugar" FontSize="16"/>
                         <Label  Text=" • 4 teaspoons baking powder" FontSize="16"/>
                         <Label  Text=" • 1 teaspoon baking soda " FontSize="16"/>
                         <Label  Text=" • 1 teaspoon kosher salt" FontSize="16"/>
                         <Label  Text=" • ¾ cup unsalted butter, chilled and cut into small piece "   LineBreakMode="WordWrap" WidthRequest="400"  HeightRequest="50" FontSize="16"/>
                       
                </VerticalStackLayout>
        </VerticalStackLayout>
     </HorizontalStackLayout>

     <Button  Text="Steps"
                Clicked="HighCaloriesSteps_Clicked"
                FontSize="28" 
                FontAttributes="Bold"  
                BackgroundColor="#D9D9D9"
                WidthRequest="220"
                TextColor="Black"
                HorizontalOptions="Center"/>
 </VerticalStackLayout>
</ContentPage>