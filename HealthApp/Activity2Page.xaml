<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.Activity2Page">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="#CFF4CF">

            <Label
                Text="Activity 2"
                HorizontalOptions="Fill"
                TextColor="#2A772A"
                BackgroundColor="#8AE18A"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Muscle relaxation techniques - As muscle tension is a symtom of panic attacks to can help to try to relax them by;"
                HorizontalOptions="Fill"
                Padding="25"
                FontSize="Small"
                TextColor="#2A772A"
                BackgroundColor="#8AE18A"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                x:Name="Label1"
                Text=""
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#2A772A"
                BackgroundColor="#8AE18A"/>

            <Label
                x:Name="Label2"
                Text=""
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#2A772A"
                BackgroundColor="#8AE18A"/>

            <Label
                x:Name="Label3"
                Text=""
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#2A772A"
                BackgroundColor="#8AE18A"/>

            <Button
                x:Name="BackBtn"
                Padding="30"
                Clicked="OnBackClick"
                HorizontalOptions="Start"
                TextColor="#532E75"
                BackgroundColor="#B97EED"
                Text="Back" 
                FontSize="Medium"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
