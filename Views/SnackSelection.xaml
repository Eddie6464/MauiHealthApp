<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutrition.Views.SnackSelection"
             Title="Snack Selection">

      <VerticalStackLayout Padding="10" Spacing="20">
        <!--Snack Selection-->
        <Label Text="Select a Snack Option:" FontSize="24" HorizontalOptions="Center" />

        <Button Text="Blueberries 100g" Clicked="BlueberriesClicked" FontSize="20"/>
        <Button Text="Red grapes 100g" Clicked="GrapesClicked" FontSize="20"/>
        <Button Text="One Kit Kat" Clicked="KitKatClicked" FontSize="20"/>
        <Button Text="Almonds 8g" Clicked="AlmondsClicked" FontSize="20"/>
        <Button Text="Satsumas 90g" Clicked="SatsumasClicked" FontSize="20"/>
        <Button Text="One McVities Rich Tea" Clicked="RichTeaClicked" FontSize="20"/>
        <Button Text="250ml of Water" Clicked="WaterClicked" FontSize="20"/>


        <!--Back to Recipe Page-->
        <Button Text="Back to Main Page" Clicked="OnBackClicked" FontSize="20"/>
    </VerticalStackLayout>
</ContentPage>