<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.ActivitiesPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="#D4B4F1">

            <Label
                Text="Activities"
                HorizontalOptions="Fill"
                TextColor="#532E75"
                BackgroundColor="#B97EED"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="Activity1Btn"
                Padding="40"
                Text="Activity 1" 
                TextColor="#2D727F"
                BackgroundColor="#7EDCED"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnActivity1Click"
                 />
            
            <Button
                x:Name="Activity2Btn"
                Padding="40"
                Text="Activity 2" 
                TextColor="#197119"
                BackgroundColor="#7CD27C"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnActivity2Click"
                 />

            <Button
                x:Name="Activity3Btn"
                Padding="40"
                Text="Activity 3" 
                TextColor="#764877"
                BackgroundColor="#EDB27E"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnActivity3Click"
                 />
            
            <Button
                x:Name="Activity4Btn"
                Padding="40"
                Text="Activity 4" 
                TextColor="#813063"
                BackgroundColor="#ED7EC4"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnActivity4Click"
                 />

            <Button
                x:Name="BackBtn"
                Padding="30"
                Clicked="OnBackClick"
                HorizontalOptions="Start"
                TextColor="#1E6D7B"
                BackgroundColor="#7EDCED"
                Text="Back" 
                FontSize="Medium"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
