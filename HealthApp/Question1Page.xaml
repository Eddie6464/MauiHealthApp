<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.Question1Page">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="#B2E8F2">

            <Label
                Text="Question 1"
                HorizontalOptions="Fill"
                TextColor="#2E6D79"
                BackgroundColor="#7EDCED"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="How often do you feel stressed?, with 1 being never and 5 being always"
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#2E6D79"
                BackgroundColor="#7EDCED"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="OneBtn"
                Padding="10"
                Text="1" 
                TextColor="#542A7A"
                BackgroundColor="#B97EED"
                FontSize="Small"
                VerticalOptions="Fill"
                Clicked="On1Click"
                 />
            
            <Button
                x:Name="TwoBtn"
                Padding="10"
                Text="2" 
                TextColor="#542A7A"
                BackgroundColor="#B97EED"
                FontSize="Small"
                VerticalOptions="Fill"
                Clicked="On2Click"
                 />

            <Button
                x:Name="ThreeBtn"
                Padding="10"
                Text="3" 
                TextColor="#542A7A"
                BackgroundColor="#B97EED"
                FontSize="Small"
                VerticalOptions="Fill"
                Clicked="On3Click"
                 />
            
            <Button
                x:Name="FourBtn"
                Padding="10"
                Text="4" 
                TextColor="#542A7A"
                BackgroundColor="#B97EED"
                FontSize="Small"
                VerticalOptions="Fill"
                Clicked="On4Click"
                 />

            <Button
                x:Name="FiveBtn"
                Padding="10"
                Text="5" 
                TextColor="#542A7A"
                BackgroundColor="#B97EED"
                FontSize="Small"
                VerticalOptions="Fill"
                Clicked="On5Click"
                 />
            
            <Button
                x:Name="Question2Btn"
                Padding="20"
                Text="Question 2" 
                TextColor="#6A421F"
                BackgroundColor="#EDB27E"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnQuestion2Click"
                 />

            <Button
                x:Name="BackBtn"
                Padding="10"
                Clicked="OnBackClick"
                HorizontalOptions="Start"
                TextColor="#7A502A"
                BackgroundColor="#EDB27E"
                Text="Back" 
                FontSize="Medium"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
