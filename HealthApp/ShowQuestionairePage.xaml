<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.ShowQuestionairePage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="#FBD1EB">

            <Label
                Text="Show Questionaires"
                HorizontalOptions="Fill"
                TextColor="#7B225B"
                BackgroundColor="#ED7EC4"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Search for Questionaire number:"
                HorizontalOptions="Fill" />

            <Entry
                x:Name="Entry"
                Placeholder="Enter text"
                TextColor="#000000"
                BackgroundColor="#D9D9D9"
                VerticalOptions="Fill"
                 />

            <Button
                x:Name="EnterBtn"
                Padding="30"
                Text="Enter" 
                TextColor="#7B225B"
                BackgroundColor="#ED7EC4"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnEnterClick"
                 />

            <Label
                x:Name="Question1"
                Text="Question 1: "
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#7B225B"
                BackgroundColor="#FFDAADC8"/>

            <Label
                x:Name="Question2"
                Text="Question 2: "
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#7B225B"
                BackgroundColor="#FFDAADC8"/>

            <Label
                x:Name="Question3"
                Text="Question 3: "
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#7B225B"
                BackgroundColor="#FFDAADC8"/>

            <Label
                x:Name="Question4"
                Text="Question 4: "
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#7B225B"
                BackgroundColor="#FFDAADC8"/>

            <Label
                x:Name="Question5"
                Text="Question 5: "
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#7B225B"
                BackgroundColor="#FFDAADC8"/>

            <Label
                x:Name="Question6"
                Text="Question 6: "
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#7B225B"
                BackgroundColor="#FFDAADC8"/>

            <Button
                x:Name="MakingPlansBtn"
                Padding="40"
                Text="Back to Making Plans" 
                TextColor="#652C98"
                BackgroundColor="#B97EED"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnMakingPlansClick"
                 />
            
            <Button
                x:Name="BackBtn"
                Padding="30"
                Clicked="OnBackClick"
                HorizontalOptions="Start"
                TextColor="#3C1C59"
                BackgroundColor="#EDB27E"
                Text="Back" 
                FontSize="Medium"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
