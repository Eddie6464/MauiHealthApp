<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.Activity3Page">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="#F3D5C0">

            <Label
                Text="Activity 3"
                HorizontalOptions="Fill"
                TextColor="#90603F"
                BackgroundColor="#EAB28C"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="The 4-7-8 breathing method - This involves;"
                HorizontalOptions="Fill"
                Padding="25"
                FontSize="Small"
                TextColor="#90603F"
                BackgroundColor="#EAB28C"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                x:Name="Label1"
                Text=""
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#90603F"
                BackgroundColor="#EAB28C"/>

            <Label
                x:Name="Label2"
                Text=""
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#90603F"
                BackgroundColor="#EAB28C"/>

            <Label
                x:Name="Label3"
                Text=""
                FontSize="Small"
                Padding="25"
                HorizontalOptions="Fill"
                TextColor="#90603F"
                BackgroundColor="#EAB28C"/>

            <Button
                x:Name="BackBtn"
                Padding="30"
                Clicked="OnBackClick"
                HorizontalOptions="Start"
                TextColor="#532E75"
                BackgroundColor="#B97EED"
                Text="Back"
                FontSize="Medium"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
