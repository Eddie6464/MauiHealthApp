<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutrition.Views.DinnerSelection"
             Title="Dinner Selection">
        
    <VerticalStackLayout Padding="10" Spacing="20">
        <Label Text="Select a Dinner Option:" FontSize="24" HorizontalOptions="Center" />

        <!-- Dinner Options -->
        <Button Text="Small Pepperoni Pizza" Clicked="OnPizzaClicked" FontSize="20" />
        <Button Text="Small Portion of french fries" Clicked="OnFriesClicked" FontSize="20" />
        <Button Text="Chicken Breast 100g" Clicked="ChickenClicked" FontSize="20" />
        <Button Text="Basmati Rice 150g" Clicked="RiceClicked" FontSize="20" />
        <Button Text="Potato 213g" Clicked="PotatoClicked" FontSize="20" />
        <Button Text="Salmon Fillet 125g" Clicked="SalmonClicked" FontSize="20" />
        <Button Text="250ml of Water" Clicked="WaterClicked" FontSize="20"/>

        <Button Text="Back to Main Page" Clicked="OnBackClicked" FontSize="20" />
    </VerticalStackLayout>
</ContentPage>