<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.LightUpScores">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="#F3D5C0">

            <Label
                Text="Scores"
                HorizontalOptions="Fill"
                TextColor="#5C2F83"
                BackgroundColor="#EAB28C"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Enter the date range for the scores you want to see:"
                HorizontalOptions="Fill" />

            <Entry
                x:Name="Entry1"
                Placeholder="1st Date"  
                TextColor="#000000"
                BackgroundColor="#D9D9D9"
                VerticalOptions="Fill"
                 />

            <Entry
                x:Name="Entry2"
                Placeholder="2nd Date"  
                TextColor="#000000"
                BackgroundColor="#D9D9D9"
                VerticalOptions="Fill"
                 />

            <Button
                x:Name="EnterBtn"
                Padding="30"
                Text="Enter" 
                TextColor="#5C2F83"
                BackgroundColor="#EAB28C"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnEnterClick"
                 />

            <Label
                x:Name="label"
                Text=""
                HorizontalOptions="Fill" />

            <Button
                x:Name="BackBtn"
                Padding="30"
                Clicked="OnBackClick"
                HorizontalOptions="Start"
                TextColor="#2A782A"
                BackgroundColor="#8CE48C"
                Text="Back" 
                FontSize="Medium"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
