<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.GamesPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="#F5D2B3">

            <Label
                Text="Games"
                HorizontalOptions="Fill"
                TextColor="#684162"
                BackgroundColor="#EDB27E"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="Game1Btn"
                Padding="40"
                Text="Game 1" 
                TextColor="#1A5A66"
                BackgroundColor="#7EDCED"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnGame1Click"
                 />
            
            <Button
                x:Name="Game2Btn"
                Padding="40"
                Text="Game 2" 
                TextColor="#673890"
                BackgroundColor="#B97EED"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnGame2Click"
                 />

            <Button
                x:Name="Game3Btn"
                Padding="40"
                Text="Game 3" 
                TextColor="#197119"
                BackgroundColor="#7CD27C"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnGame3Click"
                 />

            <Button
                x:Name="BackBtn"
                Padding="30"
                Clicked="OnBackClick"
                HorizontalOptions="Start"
                TextColor="#1E6D7B"
                BackgroundColor="#7EDCED"
                Text="Back" 
                FontSize="Medium"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
