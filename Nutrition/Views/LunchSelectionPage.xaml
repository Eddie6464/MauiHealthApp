<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutrition.Views.LunchSelectionPage"
             Title="Lunch Selection">
   
   
    <VerticalStackLayout Padding="10" Spacing="20">
        <!-- Lunch option-->
        <Label Text="Select a Lunch Option:" FontSize="24" HorizontalOptions="Center" />

        <Button Text="White baguette 150g" Clicked="BaguatteClicked" FontSize="20" />
        <Button Text="Lurpak slightly salted butter 5g" Clicked="ButterClicked" FontSize="20" />
        <Button Text="White Bread 25g slice" Clicked="BreadClicked" FontSize="20" />
        <Button Text="Regular slice of Ham" Clicked="HamClicked" FontSize="20" />
        <Button Text="5 x Cherry Tomatoes" Clicked="TomatoClicked" FontSize="20" />
        <Button Text="Egg 50g" Clicked="EggClicked" FontSize="20" />
        <Button Text="250ml of Water" Clicked="WaterClicked" FontSize="20"/>



        <Button Text="Back to Main Page" Clicked="OnBackClicked" FontSize="20" />
    </VerticalStackLayout>
</ContentPage>