<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnergyHealthApp.Views.WorkoutPage"
             BackgroundColor="{StaticResource BackgroundColor}"
             NavigationPage.HasNavigationBar="False">
             <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="920"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>
                <BoxView Style="{StaticResource TopBar}"
                    Grid.ColumnSpan="3"/>
                <Label
                    Text="Workout Generator"
                    Style="{StaticResource TopLabel}"
                    Grid.Column="1"/>
                <Button
                    Grid.ColumnSpan="3"
                    Style="{StaticResource HomeButton}"
                    Clicked="HomeButtonClicked"/>
                <Label 
                    x:Name="WorkoutLabel"
                    Style="{StaticResource WorkoutLabel}"
                    Grid.Row="1"/>
            </Grid>
</ContentPage>