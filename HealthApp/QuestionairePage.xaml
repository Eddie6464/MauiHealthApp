<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.QuestionairePage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="#F5CDAA">

            <Label
                Text="Questionaire"
                HorizontalOptions="Fill"
                TextColor="#89562A"
                BackgroundColor="#EDB27E"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="This questionaire will inform you what you could and should include in your mental wellbeing plan"
                HorizontalOptions="Fill"
                TextColor="#89562A"
                FontSize="Small"
                Padding="25"
                BackgroundColor="#EDB27E"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                x:Name="Question1Btn"
                Padding="40"
                Text="Question 1" 
                TextColor="#1F535C"
                BackgroundColor="#7EDCED"
                FontSize="Medium"
                VerticalOptions="Fill"
                Clicked="OnQuestion1Click"
                 />

            <Button
                x:Name="BackBtn"
                Padding="30"
                Clicked="OnBackClick"
                HorizontalOptions="Start"
                TextColor="#4D2471"
                BackgroundColor="#B97EED"
                Text="Back" 
                FontSize="Medium"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
