<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Nutrition.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Nutrition.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
       <!-- TabBar for the app to show the different categories -->
         <ShellContent Title="Nutrition"  Icon="icon_about_ios.png"  ContentTemplate="{DataTemplate views:MainPage}" />
         <ShellContent Title="Fitness" Icon="icon_about_ios.png" ContentTemplate="{DataTemplate views:MainPage}" />
         <ShellContent Title="Health" Icon="icon_about_ios.png" ContentTemplate="{DataTemplate views:MainPage}" />
         <ShellContent Title="Mental Health" Icon="icon_about_ios.png" ContentTemplate="{DataTemplate views:MainPage}" />
    </TabBar>

</Shell>